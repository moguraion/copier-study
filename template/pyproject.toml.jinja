[tool.poetry]
name = "{{ project_name }}"
version = "0.1.0"
description = "{{ project_description }}"
authors = ["{{ author_fullname }} <{{ author_email }}>"]
readme = "README.md"
packages = [{include = "{{ project_name }}", from = "src"}]

[tool.poetry.dependencies]
python = "^3.10"

[tool.poetry.group.dev.dependencies]
flake8 = "^6.0.0"
flake8-docstrings = "^1.7.0"
black = "^23.3.0"
isort = "^5.12.0"
mypy = "^1.3.0"


[tool.black]
line-length = 119

[tool.isort]
profile = "black"
line_length = 119


[build-system]
requires = ["poetry-core"]
build-backend = "poetry.core.masonry.api"
